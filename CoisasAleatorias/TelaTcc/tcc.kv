<BackgroundColor@Widget>
    background_color: 1,1,1,1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<CorLabel@Label+BackgroundColor>
    background_color: 0,0,0,0


<Botao@ButtonBehavior+Label>
    canvas.before:
        Color:
            rgba: 0.1,0.5,0.7,1
        Ellipse:
            size: self.height,self.height
            pos: self.pos

<Tela>:
    BoxLayout:
        orientation: 'vertical'
        CorLabel:
            text: 'Silvio Santos'
            bold: True
            font_size: 20
            background_color: 0.1,0.5,0.7,0.9
            height: 70
            size_hint_y: None
            pos_hint: {'left':1}

        CorLabel:
            text: 'Sua vida Financeira'
            background_color: 0.3,0.7,0.8,1
            font_size: 20
            size_hint_y: None
            height: 100
            pos_hint: {'left':1}

        CorLabel:
            text: 'Seus ultimos gastos'
            color: 0.3,0.7,0.8,1
            background_color: 1,1,1,1
            font_size: 20
            Botao:
                text: '+'
                font_size: 30
                size_hint_x: None
                size_hint_y: None
                width: '40sp'
                height: '40sp'
                on_press: print('TACA O PAU DOIDOO!!')